.container
    .panel.panel-group.panel-default
        .panel-body
            h4 Buscar Perfis de Usuário:
            .row
                .navbar-form.navbar-left(method="POST", action)
                    form(name="buscaPerfis", method="get" , action = "")
                        form.form-group
                            div.input
                                input.form-control(type="text", name="nomePerfil", placeholder = "Nome do Perfil de Usuário")
                                input.form-control(type="submit", value="Procurar")
    .panel.panel-group.panel-default
        .panel-body
            .panel.panel-default
                table.table.table-hover.sortable(id="tabela")
                    thead.thead-inverse
                        tr
                            th	Id
                            th	Nome
                            th(width="50px")
                            th(width="10px")
                            th(width="10px")
                            th(width="10px")
                    tbody
                        tr(ng-repeat=("perfil in listaPerfis"))
                            td  {{perfil.id}}
                            td  {{perfil.nome | lowercase}}
                            td
                            td(width="10px")
                            td(width="10px")
                                a.span.glyphicon.glyphicon-edit(href="#/",title="Editar Perfil")
                            td(width="10px")
                                a.span.glyphicon.glyphicon-trash(ng-click= "ModalRemover(perfil.id)",data-toggle="modal", title="Remover Perfil",style="color:red")
                script
                    var newTableObject = document.getElementById("tabela");
                    sorttable.makeSortable(newTableObject);

#modal.modal.fade(tabindex="-1", role="dialog", aria-labelledby="modal", aria-hidden="true")
    .modal-dialog
        .modal-content
            .modal-header
                button.close(type="button",data-dismiss="modal", aria-label="Close")          
                h5.modal-title Remoção de Perfil
            .modal-body
                p Confirmação de remoção.
            .modal-footer
                button.btn.btn-primary(type="button" , ng-click = 'RemoverPerfil()') Remover</button>
                button.btn.btn-primary(type="button" , data-dismiss="modal") Voltar