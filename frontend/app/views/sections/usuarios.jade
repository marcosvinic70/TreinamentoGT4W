.container
	.panel.panel-group.panel-default
		.panel-body
			h4 Buscar Usuários:
			.row
				.navbar-form.navbar-left(method="POST", action)
					form(name="buscaUsuarios", method="get" , action = "")
						form.form-group
							div.input
								input.form-control(type="text", name="nomeUsuario", placeholder = "Nome do Usuário")
								input.form-control(type="submit", value="Procurar")
	.panel.panel-group.panel-default
		.panel-body
			.panel.panel-default
				table.table.table-hover.sortable(id="tabela")
					thead
						tr
							th	Id
							th	Nome
							th	CPF
							th	Cargo
							th(width="50px")
							th(width="10px")
							th(width="10px")
							th(width="10px")
					tbody
						tr(ng-repeat=("usuario in listaUsuarios"))
							td	{{usuario.id}}
							td	{{usuario.nome}}
							td	{{usuario.cpf}}
							td	{{usuario.cargo.nome}}
							td
							td(width="10px")
							td(width="10px")
								a.span.glyphicon.glyphicon-edit(href="#/editarUsuario/{{usuario.id}}",title="Editar Usuário")
							td(width="10px")
								a.span.glyphicon.glyphicon-trash(ng-click= "ModalRemover(usuario.id)",data-toggle="modal", title="Remover Usuário",style="color:red")		
				table.table.table-hover
					tbody
						tr
							td 
							td
							td
							td
							td
							td
							th(width="50px")
							th(width="10px")
							th(width="10px")
							th(width="10px")
								a.span.glyphicon.glyphicon-plus(href="#/adicionarUsuario",title="Cadastrar Usuário",style="color:green")

				script
					var newTableObject = document.getElementById("tabela");
					sorttable.makeSortable(newTableObject);

#modal.modal.fade(tabindex="-1", role="dialog", aria-labelledby="modal", aria-hidden="true")
	.modal-dialog
		.modal-content
			.modal-header
				button.close(type="button",data-dismiss="modal", aria-label="Close")	      
				h5.modal-title Remoção de Usuário
			.modal-body
				p Confirmação de remoção.
			.modal-footer
				button.btn.btn-primary(type="button" , ng-click = 'RemoverUsuario()') Remover</button>
				button.btn.btn-primary(type="button" , data-dismiss="modal") Voltar